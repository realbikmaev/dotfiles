syntax on
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number relativenumber
set hlsearch
set ruler
highlight Comment ctermfg=green
nnoremap j h
nnoremap k j
nnoremap l k
nnoremap ; l
vnoremap j h
vnoremap k j
vnoremap l k
vnoremap ; l
inoremap <Space><Space> <ESC>
vnoremap <Space><Space> <ESC>
set noswapfile
set nobackup
set nowritebackup